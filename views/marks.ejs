<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Marks Management</h2>
        <p class="text-muted mb-0">Manage and track student marks</p>
    </div>
    <a href="/marks/add" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Add Marks
    </a>
</div>

<!-- Filter Section -->
<div class="card mb-4">
    <div class="card-body">
        <form action="/marks" method="GET" class="row g-3">
            <div class="col-md-4">
                <label for="student_id" class="form-label">Student</label>
                <select class="form-select" id="student_id" name="student_id">
                    <option value="">All Students</option>
                    <% if (typeof students !== 'undefined') { %>
                    <% students.forEach(student => { %>
                    <option value="<%= student.id %>"><%= student.first_name %> <%= student.last_name %> (<%= student.admission_number %>)</option>
                    <% }) %>
                    <% } %>
                </select>
            </div>
            <div class="col-md-3">
                <label for="academic_year" class="form-label">Academic Year</label>
                <input type="text" class="form-control" id="academic_year" name="academic_year" placeholder="e.g., 2024-2025">
            </div>
            <div class="col-md-3">
                <label for="exam_type" class="form-label">Exam Type</label>
                <select class="form-select" id="exam_type" name="exam_type">
                    <option value="">All Types</option>
                    <option value="internal">Internal</option>
                    <option value="semester">Semester</option>
                    <option value="annual">Annual</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-filter me-1"></i>Filter
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Marks Table -->
<div class="card">
    <div class="card-body">
        <% if (typeof marksData !== 'undefined' && marksData.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Student</th>
                        <th>Admission No</th>
                        <th>Exam Type</th>
                        <th>Marks</th>
                        <th>Percentage</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% marksData.forEach(mark => { 
                        const percentage = mark.marks_obtained ? (mark.marks_obtained / mark.max_marks * 100).toFixed(2) : 0;
                        const grade = percentage >= 90 ? 'A+' : percentage >= 80 ? 'A' : percentage >= 70 ? 'B+' : percentage >= 60 ? 'B' : percentage >= 50 ? 'C' : percentage >= 40 ? 'D' : 'F';
                    %>
                    <tr>
                        <td>
                            <div class="fw-bold"><%= mark.first_name %> <%= mark.last_name %></div>
                            <small class="text-muted">Roll: <%= mark.roll_number %></small>
                        </td>
                        <td><%= mark.admission_number %></td>
                        <td>
                            <span class="badge bg-<%= mark.exam_type === 'internal' ? 'info' : 'warning' %>">
                                <%= mark.exam_type %>
                            </span>
                        </td>
                        <td>
                            <%= mark.marks_obtained %>/<%= mark.max_marks %>
                        </td>
                        <td>
                            <span class="badge bg-<%= percentage >= 60 ? 'success' : (percentage >= 40 ? 'warning' : 'danger') %>">
                                <%= percentage %>% (<%= grade %>)
                            </span>
                        </td>
                        <td>
                            <button type="button" class="btn btn-outline-primary btn-sm" 
                                    onclick="editMarks('<%= mark.mark_id %>', '<%= mark.marks_obtained %>', '<%= mark.max_marks %>')">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button type="button" class="btn btn-outline-danger btn-sm"
                                    onclick="deleteMarks('<%= mark.mark_id %>')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <% } else { %>
        <div class="text-center py-5">
            <i class="fas fa-clipboard-check fs-1 text-muted mb-3"></i>
            <h5 class="text-muted">No marks found</h5>
            <p class="text-muted">Add marks for students to get started.</p>
            <a href="/marks/add" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add Marks
            </a>
        </div>
        <% } %>
    </div>
</div>

<!-- Edit Marks Modal -->
<div class="modal fade" id="editMarksModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Marks</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editMarksForm" method="POST">
                <div class="modal-body">
                    <input type="hidden" name="marks_obtained" id="edit_marks">
                    <div class="mb-3">
                        <label for="edit_marks_input" class="form-label">Marks Obtained</label>
                        <input type="number" class="form-control" id="edit_marks_input" step="0.01" required>
                    </div>
                    <div class="mb-3">
                        <label for="edit_max_marks" class="form-label">Max Marks</label>
                        <input type="number" class="form-control" id="edit_max_marks" step="0.01" value="100" required>
                    </div>
                    <div class="mb-3">
                        <label for="edit_exam_date" class="form-label">Exam Date</label>
                        <input type="date" class="form-control" id="edit_exam_date" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteMarksModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this marks entry?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteMarksForm" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function editMarks(id, marks, maxMarks) {
    document.getElementById('edit_marks_input').value = marks;
    document.getElementById('edit_max_marks').value = maxMarks;
    document.getElementById('editMarksForm').action = '/marks/update/' + id;
    new bootstrap.Modal(document.getElementById('editMarksModal')).show();
}

function deleteMarks(id) {
    document.getElementById('deleteMarksForm').action = '/marks/delete/' + id;
    new bootstrap.Modal(document.getElementById('deleteMarksModal')).show();
}
</script>

<%- include('partials/footer') %>
